{% extends 'base.html.twig' %}

{% block title %}

    Episódios da temporada {{ season.number }} da série {{ series.name }}

{% endblock %}

{% block body %}

    <div class="container-fluid d-flex justify-content-between align-items-center p-2">
        <a href="{{ path('app_series') }}" class="btn btn-dark">Home</a>
        <a href="{{ path('app_logout') }}" class="btn btn-danger">Sair</a>
    </div>
    
    <form method="post">
    
        <ul class="list-group mb-2">
        
            {% for episode in episodes %}

                <li class="list-group-item d-flex justify-content-between">

                    Episódio {{ episode.number }} 

                    <input type="checkbox" name="episodes[{{ episode.id }}]" {% if episode.watched %} checked {% endif %} >

                </li>

            {% endfor %}

        </ul>

        <button class="btn btn-primary mt-2">
            Salvar
        </button>
        
    <form>


{% endblock %}
