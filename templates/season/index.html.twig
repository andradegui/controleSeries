{% extends 'base.html.twig' %}

{% block title %}Temporadas de {{ series.name }}{% endblock %}

{% block body %}

    <a href="{{ path('app_series') }}" class="btn btn-dark mb-3">Voltar</a>

    <ul class="list-group">

    {% for season in seasons %}


    <li class="list-group-item d-flex justify-content-between align-items-center">

        Temporada {{ season.number }}

        <div class="d-flex">
            <span class="badge badge-pill bg-secondary">{{ season.episodes|length }}</span>
        </div>

    </li>

    {% endfor %}
    
    </ul>

{% endblock %}
