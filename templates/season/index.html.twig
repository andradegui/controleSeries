{% extends 'base.html.twig' %}

{% block title %}Temporadas de {{ series.name }}{% endblock %}

{% block body %}

    <a href="{{ path('app_series') }}" class="btn btn-dark mb-2">Voltar</a>

    <ul class="list-group m-3">

    {% for season in seasons %}

    <li class="list-group-item d-flex justify-content-between align-items-center">

        <a href="{{ path('app_episodes', {season: season.id })}}" class="btn btn-light active">
            Temporada {{ season.number }}
        </a>

        <div class="d-flex">
            <span class="badge badge-pill bg-secondary">
                {{ season.watchedEpisodes|length }} / {{ season.episodes|length }}
            </span>
        </div>

    </li>

    {% endfor %}
    
    </ul>

{% endblock %}
